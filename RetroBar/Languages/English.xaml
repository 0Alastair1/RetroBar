    <system:String x:Key="exit_retrobar">Exit RetroBar</system:String>

    <system:String x:Key="restore">Restore</system:String>
    <system:String x:Key="move">Move</system:String>
    <system:String x:Key="size">Size</system:String>
    <system:String x:Key="minimize">Minimize</system:String>
    <system:String x:Key="maximize">Maximize</system:String>
    <system:String x:Key="close">Close</system:String>

    <system:String x:Key="show_hidden">Show hidden icons</system:String>
    <system:String x:Key="hide">Hide</system:String>

    <system:String x:Key="set_time">Adjust Date/Time</system:String>

</ResourceDictionary>