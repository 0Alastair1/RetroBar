<UserControl x:Class="RetroBar.Controls.StartButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Button ToolTip="{Binding Path=Title}"
            Click="Button_OnClick"
            Style="{StaticResource StartButton}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   Style="{StaticResource StartIcon}" />
            <TextBlock Text="Start"
                       Grid.Column="1"
                       Style="{StaticResource StartLabel}" />
        </Grid>
        <Button.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Explore" Click="Explore_OnClick" />
            </ContextMenu>
        </Button.ContextMenu>
    </Button>
</UserControl>
